<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:backgroundTintMode="multiply"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="407dp"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextTextMultiLine8"
        android:layout_width="400dp"
        android:layout_height="226dp"
        android:background="@color/Wheat"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginLeft="3pt"
        android:layout_weight="5"
        android:onClick="clickAdd"
        android:text="@string/add"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine8"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/buttonReview"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:onClick="clickReview"
        android:layout_marginRight="1pt"
        android:layout_weight="1"
        android:text="@string/review"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine8" />


    <Button
        android:id="@+id/buttonReset"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:onClick="clickReset"
        android:layout_weight="1"
        android:text="@string/reset"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdd" />

    <Button
        android:id="@+id/buttonData"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:onClick="clickReviewData"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:text="@string/data"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReview" />

    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_marginStart="6dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="@string/editTextInput"
        android:inputType="text"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReset" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginTop="0dp"
        android:onClick="clickReviewMonth"
        android:layout_marginEnd="4dp"
        android:text="@string/search"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonData" />

    <CalendarView
        android:id="@+id/calendarView10"
        android:layout_width="391dp"
        android:layout_height="301dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"

        android:backgroundTint="#C88C8C"
        android:dateTextAppearance="@style/TextAppearance.AppCompat.Large"
        android:drawingCacheQuality="auto"
        android:textDirection="locale"
        android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine8"
        app:layout_constraintVertical_bias="0.971" />

</androidx.constraintlayout.widget.ConstraintLayout>